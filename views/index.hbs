<div class="container mt-5">
  <form action="/" method="GET">
    <div class="form-group">
      <select class="form-control" name="currentCategory" onchange="this.form.submit()">
        {{#if currentCategoryName}}<option>{{currentCategoryName}}</option>{{/if}}
        <option value="all">全部</option>
        {{#each categories}}
        <option value="{{this.category}}">
          {{this.categoryName}}
        </option>
        {{/each}}
      </select>
    </div>
  </form>
  <div class="form-group">
    <span>
      總金額:
    </span>
    <div class="total-amount">
      {{totalAmount}}
    </div>
  </div>
  <ul class="list-group record-list">
    {{#each records}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-lg-2">
          <i class="{{ this.icon }}"></i>
        </div>
        <div class="col-lg-4 name-date">
          <div class="name">
            {{ this.name }}
          </div>
          <div class="date">
            {{ this.date }}
          </div>
        </div>
        <div class="col-lg-3 amount">
          {{ this.amount }}
        </div>
        <div class="col-lg-3 btn-area">
          <a class="btn btn-success" href="/records/{{ this._id }}">修改</a>
          <form action=" /records/{{ this._id }}?_method=DELETE" method="POST" onsubmit="return confirm('確定要刪除嗎?')"
            style="display: inline;">
            <button class="btn btn-danger" type="submit">刪除</button>
          </form>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
  <div class="text-center">
    <a href="/records/new" class="btn btn-primary">新增支出</a>
  </div>
</div>